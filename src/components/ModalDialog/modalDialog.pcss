@import '../../styles/vars/media.pcss';

.modal-dialog {
    display: flex;
    flex-direction: column;
    gap: var(--spacer-d);
    width: 100%;
    max-width: 100%;
    padding: var(--spacer-d);
    margin-bottom: 0;
    border-top-left-radius: var(--border-radius-c);
    border-top-right-radius: var(--border-radius-c);
    border: none;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    background-color: var(--model-dialog-bg-color);
    color: var(--model-dialog-text-color);
    transform: translateY(100%);
    transition: transform 0.2s;
    z-index: 10;

    &::backdrop {
        opacity: 0;
        transition: opacity 0.2s;
    }

    &--active {
        transform: translateY(0);

        &::backdrop {
            opacity: 1;
            background-color: rgba(0, 0, 0, 0.6);
        }
    }

    &__header {
        position: relative;
    }

    &__close-btn {
        position: absolute;
        right: 0;
        top: 0;
        padding: 0;
    }

    &__content {
        display: flex;
        flex-direction: column;
        gap: var(--spacer-d);
    }

    @media (--min-media-mobile) {
        max-width: 500px;
    }
}
